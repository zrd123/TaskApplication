<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task3_Activity"
    android:background="#E8E6E6">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="说走就走的旅行"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/et_t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:background="@drawable/btn_corner"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_t3"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="15dp">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:text="欧洲"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/et_corner"
            android:backgroundTint="#03A9F4"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_2"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:text="亚洲"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/et_corner"
            android:backgroundTint="#FFEB3B"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_1"
            app:layout_constraintRight_toLeftOf="@id/tv_3"/>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:text="非洲"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/et_corner"
            android:backgroundTint="#F44336"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_2"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="受欢迎的旅行景点"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_tv"/>
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/tv_corner"
        android:backgroundTint="#9C27B0"
        app:layout_constraintTop_toBottomOf="@+id/tv_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>