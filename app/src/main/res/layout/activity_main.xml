<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    tools:context=".MainActivity"
    android:paddingVertical="20dp" >


    <Button
        android:id="@+id/btn_experi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_corner"
        android:padding="10dp"
        android:text="Experiment1"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_experi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_experi1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_corner"
        android:padding="10dp"
        android:text="Experiment2"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_experi3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_experi2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_corner"
        android:padding="10dp"
        android:text="Experiment3"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="30sp" />

</RelativeLayout>